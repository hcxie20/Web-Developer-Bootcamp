<%- include("partials/header")%>
<div class="container">
    <h1 style="text-align: center">Edit <%= blog.title%></h1>

    <div class="border p-2" style="width: 70%; margin: 0 auto;">
        <form action="/blogs/<%=blog._id%>?_method=PUT", method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="blog[title]" value="<%= blog.title%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="blog[image]" value="<%= blog.image%>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="blog[body]" rows=5><%=blog.body%></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary p-1 btn-block">Submit</button>
            </div>
        </form>
    </div>
    <div class="border" style="width: 70%; margin: 0 auto;">
        <form action="/blogs/<%=blog._id%>?_method=DELETE", method="POST" style="width: 70%; margin: 0 auto;">
            <div class="form-group">
                <button class="btn btn-danger btn-block">Delete item</button>
            </div>
        </form>
    </div>
    
</div>


<%- include("partials/footer")%>